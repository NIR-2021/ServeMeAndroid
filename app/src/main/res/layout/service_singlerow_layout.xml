<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ongoing1"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="3"
            android:textAlignment="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/category"
                    android:gravity="left"
                    android:textSize="20sp"
                    android:text="Plumbing"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/date"
                    android:gravity="right"
                    android:text="12/15/2022" ></TextView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/description"
                android:layout_height="wrap_content"
                android:text="I am having a leaking sink. "></TextView>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/v_category"
                android:layout_height="wrap_content"
                android:text="Category: list[]"
                android:visibility="gone"
                ></TextView>
\
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/v_rating"
                android:layout_height="wrap_content"
                android:text="Rating: 4.5/5"
                android:visibility="gone"
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:id="@+id/status"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:layout_marginRight="10dp"
                android:textColor="#FFA500"></TextView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

