<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:src="@drawable/finallogo"
                android:transitionName="logoImage" />


            <ScrollView
                android:id="@+id/main_sl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/logoImage"
                android:layout_marginBottom="75dp">

                <RelativeLayout
                    android:id="@+id/secondary_relative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <HorizontalScrollView
                        android:id="@+id/horizontal_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/category1"
                                android:layout_width="150dp"
                                android:layout_height="140dp"
                                android:layout_marginRight="10dp"
                                android:onClick="onClick"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="120dp"
                                        android:scaleType="fitXY"

                                        android:src="@drawable/app" />

                                    <TextView
                                        android:id="@+id/categoryText1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Appliances" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/category2"
                                android:layout_width="150dp"
                                android:layout_height="140dp"
                                android:layout_marginRight="10dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="120dp"
                                        android:scaleType="fitXY"

                                        android:src="@drawable/electical" />

                                    <TextView
                                        android:id="@+id/categoryText2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Electrical" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/category3"
                                android:layout_width="150dp"
                                android:layout_height="140dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="5dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="120dp"
                                        android:scaleType="fitXY"

                                        android:src="@drawable/cleaning" />

                                    <TextView
                                        android:id="@+id/categoryText3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Home Cleaning" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/category4"
                                android:layout_width="150dp"
                                android:layout_height="140dp"
                                android:layout_marginRight="10dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">


                                    <ImageView
                                        android:id="@+id/categoryText4"
                                        android:layout_width="match_parent"
                                        android:layout_height="120dp"
                                        android:scaleType="fitXY"

                                        android:src="@drawable/plumber" />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Plumbing" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/category5"
                                android:layout_width="150dp"
                                android:layout_height="140dp"
                                android:layout_marginRight="10dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="120dp"
                                        android:scaleType="fitXY"

                                        android:src="@drawable/tutoring" />

                                    <TextView
                                        android:id="@+id/categoryText5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Tutoring" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/category6"
                                android:layout_width="150dp"
                                android:layout_height="140dp"
                                android:layout_marginRight="10dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="120dp"
                                        android:scaleType="fitXY"

                                        android:src="@drawable/packaging" />

                                    <TextView
                                        android:id="@+id/categoryText6"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Packaging and Moving" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/category7"
                                android:layout_width="150dp"
                                android:layout_height="140dp"
                                android:layout_marginRight="10dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="120dp"
                                        android:scaleType="fitXY"

                                        android:src="@drawable/repair" />

                                    <TextView
                                        android:id="@+id/categoryText7"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Computer Repair" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/category8"
                                android:layout_width="150dp"
                                android:layout_height="140dp"
                                android:layout_marginRight="10dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="120dp"
                                        android:scaleType="fitXY"

                                        android:src="@drawable/painting" />

                                    <TextView
                                        android:id="@+id/categoryText8"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textSize="11sp"
                                        android:text="Home Repair and Painting" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/category9"
                                android:layout_width="150dp"
                                android:layout_height="140dp"
                                android:layout_marginRight="10dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/categoryText9"

                                        android:layout_width="match_parent"
                                        android:layout_height="120dp"
                                        android:scaleType="fitXY"

                                        android:src="@drawable/pest" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Pest Control" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/ongoingtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="On going services"
                        android:layout_below="@+id/horizontal_view"
                        android:layout_marginTop="30dp"
                        android:textSize="20sp"></TextView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/service_listing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ongoingtext"
                        android:orientation="horizontal">

                    </androidx.recyclerview.widget.RecyclerView>
                </RelativeLayout>
            </ScrollView>



        </RelativeLayout>

    </ScrollView>
</FrameLayout>